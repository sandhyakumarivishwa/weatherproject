<!DOCTYPE html>
<html lang="en">

<head>
    {{>headerlink}}
</head>

<body>
    {{>navbar}}
    <!-- main section starts -->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">

                <div class="main_content">
                    <form action="" class="temp_form">
                        <input type="text"id="cityName" placeholder="Enter your city name" autocomplete="off">
                        <input type="submit" value="search" id="submitBtn">
                    </form>
                </div>
                <div class="tempInformation">
                    <div class="top_layer">
                    <p id="day">Tuesday</p>
                    <p id="todat_date">31 aug</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">get output here</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span>0</span> <sup>0</sup>C</p>
                            <p id="temp_status"><i class="fas fa-cloud" aria-hidden="true"></i></p>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
    <!-- footer section -->

    {{>footer}}

    <script src="js/main.js"></script>
     
</body>

</html>